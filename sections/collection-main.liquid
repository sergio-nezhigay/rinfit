<style>
.swiper-wrapper-collection > .swiper-slide{
    width: 173.8px
}
.swiper-wrapper-collection > .swiper-slide img{
    width: 173.8px;
    height: 172.1px;
    border-radius: 10px;
    object-fit: cover;
}
.main-swiper-collection{
    position: relative;
    width: fit-content;
    margin: 0 auto;
}
.main-swiper-collection{
    width: 100%;
    padding-left: 20px;
}
.main-title-collection{
    font-family: "Kumbh Sans", sans-serif;
    font-weight: 500;
    font-size: 14px;
    text-align: center;
}
.mySwiper.swiper {
    max-width: 1330px;
}
.swiper-button-next{
    right: -30px;
}
.swiper-button-next:after, .swiper-button-prev:after{
    display: none;
}
.swiper-button-prev img{
    transform: rotate(180deg);
}
.swiper-button-next,
.swiper-button-next{
    display: none
}
.swiper-button-prev img,
.swiper-button-next img{
    border: 1px solid #37393633;
    border-radius: 50%;
    padding: 7px 9.5px;
}
.swiper-button-prev{
    left: -37px;
}
.main-swiper-collection .swiper-pagination{
    position: relative;
    margin-top: 30px;
}
.main-swiper-collection .swiper-pagination-bullet {
  width: 32px;
  height: 6px;
  border-radius: 10px;
  background: #dcdcdc; 
  opacity: 1;
  margin: 0 4px;
  transition: background 0.3s;
}

.main-swiper-collection .swiper-pagination-bullet-active {
  background: #6b6b6b;
}
.main-block-collections{
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    padding: 20px 0 20px 30px;
    align-items: center;
}
.button-all-collection{
    display: none;
}
.main-block-collections p{
    line-height: normal;
    font-family: "Kumbh Sans", sans-serif;
    font-weight: 300;
    font-size: 40px;
}
.main-block-collections p em{
        font-weight: 700;
}
@media (min-width: 768px){
    .main-block-collections{
        padding: 17.5px 0 43.5px;
    }
    .button-all-collection{
        font-family: "Kumbh Sans", sans-serif;
        font-weight: 600;
        font-size: 14px;
        display: block;
        color: white;
        background: #232222;
        min-width: 129px;
        min-height: 37px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-transform: uppercase;
        border-radius: 4px;
        border: 1px solid;
        transition: all 0.3s ease; 
    }
    .button-all-collection:hover{
        background: none !important;
        color: #373A36 !important;
        border-color:#C5C1C0 !important;
    }
    .swiper-button-next,
    .swiper-button-next{
        display: block
    }
    .main-swiper-collection{
        padding: 0;
        width: fit-content;
    }
    .swiper-pagination{
        display: none !important;
    }
    .main-block-collections{
        padding-left: 0px;
    }
    .main-block-collections,
    .mySwiper.swiper{
        max-width: 660px;
    }
}
@media (min-width: 1024px){
    .main-block-collections,
    .mySwiper.swiper{
        max-width: 900px;
    }
}
@media (min-width: 1440px){
    .main-block-collections,
    .mySwiper.swiper{
        max-width: 1330px;
    }
}
</style>
<section>
    <div class="main-block-collections">
        {% if section.settings.title != blank %}
            {{ section.settings.title }}
        {% endif %}
        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
            <a class="button-all-collection" href='{{ section.settings.button_url }}'>{{section.settings.button_text}}</a>
        {% endif %}
    </div>
    <div class="main-swiper-collection">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper swiper-wrapper-collection">
                {% for collection in collections %}
                    {% if collection.image %}
                        <div class="swiper-slide">
                            <a href="{{ collection.url }}">
                                <img src="{{ collection.image | img_url: '400x400' }}" alt="{{ collection.title }}">
                                <p class="main-title-collection">{{ collection.title }}</p>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next">  <img src="{{ 'Vector.svg' | asset_url }}" alt="Next" /></div>
        <div class="swiper-button-prev"><img src="{{ 'Vector.svg' | asset_url }}" alt="Prev" /></div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        new Swiper(".mySwiper", {
            slidesPerView: 7,
            spaceBetween: 10,
            loop: false, 
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            breakpoints: {
                0: {    
                    slidesPerView: "auto",
                },
                768: {
                    slidesPerView: 4,
                },
                1024: {
                    slidesPerView: 5,
                },
                1440: {
                    slidesPerView: 7,
                }
            }
        });
    });
</script>

{% schema %}
{
  "name": "Shop by collections",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Gemstone Collection</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP ALL"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
  ],
  "presets": [
    {
      "name": "Shop by collections"
    }
  ]
}
{% endschema %}
