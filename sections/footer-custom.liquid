<section id="shopify-section-{{ section.id }}" class="pp-footer {{ section.settings.custom_classes }}">
  <div class="pp-footer-container">
    <div class="pp-footer-left">
      {% if section.settings.logo_image %}
        <div class="pp-footer-logo">
          <img src="{{ section.settings.logo_image | image_url: width: 200 }}" 
               alt="{{ section.settings.logo_alt | default: shop.name }}" 
               loading="lazy" 
               decoding="async">
        </div>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="pp-footer-description">
          {{ section.settings.description }}
        </div>
      {% endif %}
      
      {% if section.settings.country_selector_enabled %}
        <div class="pp-footer-country">
          <div class="pp-footer-country-content">
            <div class="pp-footer-country-text">
              <div class="pp-footer-country-label">Country</div>
              <div class="pp-footer-country-value">{{ section.settings.country_text | default: 'Cyprus (EUR)' }}</div>
            </div>
            <div class="pp-footer-country-arrow">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M7 10l5 5 5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
        </div>
      {% endif %}
      
      {% if section.blocks.size > 0 %}
        <div class="pp-footer-socials">
          {% for block in section.blocks %}
            {% if block.type == 'social' and block.settings.url != blank %}
              <a href="{{ block.settings.url }}" 
                 class="pp-footer-social-link"
                 target="_blank" 
                 rel="noopener noreferrer"
                 {{ block.shopify_attributes }}>
                {% if block.settings.icon_svg != blank %}
                  {{ block.settings.icon_svg }}
                {% elsif block.settings.icon_image %}
                  <img src="{{ block.settings.icon_image | image_url: width: 32 }}" 
                       alt="{{ block.settings.platform | default: 'Social' }}" 
                       loading="lazy" 
                       decoding="async"
                       width="32" 
                       height="32">
                {% endif %}
              </a>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
    
    <div class="pp-footer-right">
      {% assign nav_blocks = section.blocks | where: 'type', 'navigation' %}
      {% for block in nav_blocks %}
        {% if block.settings.title != blank %}
          <div class="pp-footer-nav-column" {{ block.shopify_attributes }}>
            <h3 class="pp-footer-nav-title">{{ block.settings.title }}</h3>
            {% if block.settings.links != blank %}
              <nav class="pp-footer-nav-list">
                {% assign nav_links = block.settings.links | split: ',' %}
                {% for link_pair in nav_links %}
                  {% assign link_parts = link_pair | split: '|' %}
                  {% if link_parts.size == 2 %}
                    {% assign link_text = link_parts[0] | strip %}
                    {% assign link_url = link_parts[1] | strip %}
                    <a href="{{ link_url }}" class="pp-footer-nav-link">{{ link_text }}</a>
                  {% endif %}
                {% endfor %}
              </nav>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

