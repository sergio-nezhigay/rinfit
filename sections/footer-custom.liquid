  font-weight: 600;
  color: var(--pp-text-color);
  margin: 0;
  text-transform: capitalize;
}

.pp-footer-nav-list {
  display: flex;
  flex-direction: column;
  gap: var(--pp-nav-gap);
}

.pp-footer-nav-link {
  font-size: 14px;
  font-weight: 400;
  color: var(--pp-text-color);
  text-decoration: none;
  text-transform: capitalize;
  transition: opacity 0.2s ease;
