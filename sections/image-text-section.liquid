<section id="{{ section.id }}" class="image-text-section-wrapper {{ section.settings.custom_classes }}">
  <div class="image-text-section-container">
    <div class="image-text-section-content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'left_content' %}
            <div class="image-text-section-left" {{ block.shopify_attributes }}>
              {% if block.settings.subheading != blank %}
                <p class="image-text-section-left-subheading">{{ block.settings.subheading }}</p>
              {% endif %}
              {% if block.settings.title != blank %}
                <h2 class="image-text-section-left-title">{{ block.settings.title }}</h2>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="image-text-section-left-description">{{ block.settings.description }}</div>
              {% endif %}
              {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                <a href="{{ block.settings.button_url }}" class="image-text-section-left-button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>

          {% when 'center_content' %}
            <div class="image-text-section-center" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 400 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  class="image-text-section-center-image"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {% endif %}
              {% if block.settings.icon_html != blank %}
                <div class="image-text-section-center-icon">
                  {{ block.settings.icon_html }}
                </div>
              {% endif %}
            </div>

          {% when 'right_content' %}
            <div class="image-text-section-right" {{ block.shopify_attributes }}>
              {% if block.settings.subheading != blank %}
                <p class="image-text-section-right-subheading">{{ block.settings.subheading }}</p>
              {% endif %}
              {% if block.settings.title != blank %}
                <h2 class="image-text-section-right-title">{{ block.settings.title }}</h2>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="image-text-section-right-description">{{ block.settings.description }}</div>
              {% endif %}
              {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                <a href="{{ block.settings.button_url }}" class="image-text-section-right-button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .image-text-section-wrapper {
    --image-text-section-bg: {{ section.settings.background_color | default: 'transparent' }};
    --image-text-section-max-width: {{ section.settings.max_width | default: '100%' }};
    --image-text-section-padding-top-desktop: {{ section.settings.padding_top_desktop | default: 80 }}px;
    --image-text-section-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop | default: 80 }}px;
    --image-text-section-padding-left-desktop: {{ section.settings.padding_left_desktop | default: 40 }}px;
    --image-text-section-padding-right-desktop: {{ section.settings.padding_right_desktop | default: 40 }}px;
    --image-text-section-padding-top-mobile: {{ section.settings.padding_top_mobile | default: 50 }}px;
    --image-text-section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile | default: 50 }}px;
    --image-text-section-padding-left-mobile: {{ section.settings.padding_left_mobile | default: 20 }}px;
    --image-text-section-padding-right-mobile: {{ section.settings.padding_right_mobile | default: 20 }}px;
  }

  .image-text-section-wrapper {
    background-color: var(--image-text-section-bg);
    width: 100%;
    padding: var(--image-text-section-padding-top-mobile) var(--image-text-section-padding-right-mobile) var(--image-text-section-padding-bottom-mobile) var(--image-text-section-padding-left-mobile);
  }

  .image-text-section-container {
    max-width: var(--image-text-section-max-width);
    margin: 0 auto;
    width: 100%;
  }

  .image-text-section-content {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 40px;
    align-items: center;
    width: 100%;
  }

  .image-text-section-left,
  .image-text-section-right {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .image-text-section-center {
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 120px;
  }

  .image-text-section-center-image {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .image-text-section-center-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80px;
    height: 80px;
  }

  .image-text-section-left-subheading,
  .image-text-section-right-subheading {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
    line-height: 1.2;
  }

  .image-text-section-left-title,
  .image-text-section-right-title {
    margin: 0;
    line-height: 1.1;
    font-weight: 700;
  }

  .image-text-section-left-description,
  .image-text-section-right-description {
    margin: 0;
    line-height: 1.5;
  }

  .image-text-section-left-button,
  .image-text-section-right-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    border-radius: 4px;
    padding: 14px 28px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    text-align: center;
    width: fit-content;
  }

  .image-text-section-left-button:hover,
  .image-text-section-right-button:hover {
    opacity: 0.8;
    transform: translateY(-2px);
  }

  @media screen and (min-width: 768px) {
    .image-text-section-wrapper {
      padding: var(--image-text-section-padding-top-desktop) var(--image-text-section-padding-right-desktop) var(--image-text-section-padding-bottom-desktop) var(--image-text-section-padding-left-desktop);
    }

    .image-text-section-content {
      gap: 80px;
    }

    .image-text-section-center-icon {
      width: 120px;
      height: 120px;
    }
  }

  @media screen and (max-width: 767px) {
    .image-text-section-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .image-text-section-left,
    .image-text-section-right {
      text-align: center;
      align-items: center;
    }

    .image-text-section-center {
      order: -1;
    }
  }
</style>

