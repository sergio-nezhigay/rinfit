<section id="{{ section.id }}" class="image-with-text-wrapper {{ section.settings.custom_classes }}">
  <div class="image-with-text-container">
    <div class="image-with-text-content {% if section.settings.reverse_layout %}image-with-text-reverse{% endif %}">
      <div class="image-with-text-media">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="image-with-text-image"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        {% else %}
          <div class="image-with-text-placeholder">
            <p>Add an image</p>
          </div>
        {% endif %}
      </div>
      
      <div class="image-with-text-text">
        {% if section.settings.subheading != blank %}
          <p class="image-with-text-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
        
        {% if section.settings.title != blank %}
          <h2 class="image-with-text-title">{{ section.settings.title }}</h2>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <div class="image-with-text-description">{{ section.settings.description }}</div>
        {% endif %}
        
        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <a href="{{ section.settings.button_url }}" class="image-with-text-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .image-with-text-wrapper {
    --image-with-text-bg: {{ section.settings.background_color | default: 'transparent' }};
    --image-with-text-max-width: {{ section.settings.max_width | default: '100%' }};
    --image-with-text-padding-top-desktop: {{ section.settings.padding_top_desktop | default: 80 }}px;
    --image-with-text-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop | default: 80 }}px;
    --image-with-text-padding-left-desktop: {{ section.settings.padding_left_desktop | default: 40 }}px;
    --image-with-text-padding-right-desktop: {{ section.settings.padding_right_desktop | default: 40 }}px;
    --image-with-text-padding-top-mobile: {{ section.settings.padding_top_mobile | default: 50 }}px;
    --image-with-text-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile | default: 50 }}px;
    --image-with-text-padding-left-mobile: {{ section.settings.padding_left_mobile | default: 20 }}px;
    --image-with-text-padding-right-mobile: {{ section.settings.padding_right_mobile | default: 20 }}px;
  }

  .image-with-text-wrapper {
    background-color: var(--image-with-text-bg);
    width: 100%;
    padding: var(--image-with-text-padding-top-mobile) var(--image-with-text-padding-right-mobile) var(--image-with-text-padding-bottom-mobile) var(--image-with-text-padding-left-mobile);
  }

  .image-with-text-container {
    max-width: var(--image-with-text-max-width);
    margin: 0 auto;
    width: 100%;
  }

  .image-with-text-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    width: 100%;
  }

  .image-with-text-reverse {
    grid-template-columns: 1fr 1fr;
  }

  .image-with-text-reverse .image-with-text-media {
    order: 2;
  }

  .image-with-text-reverse .image-with-text-text {
    order: 1;
  }

  .image-with-text-media {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    max-width: 522px;
    max-height: 450px;
  }

  .image-with-text-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 12px;
    min-width: 350px;
    min-height: 320px;
  }

  .image-with-text-placeholder {
    background: #f5f5f5;
    border: 2px dashed #ccc;
    border-radius: 12px;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }

  .image-with-text-text {
    background-color: {{ section.settings.background_color_block }};
    display: flex;
    flex-direction: column;
    padding: 0 20px;
  }

  .image-with-text-subheading {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    line-height: 1.2;
    font-family: "Kumbh Sans", sans-serif;
    font-weight: 500;
  }

  .image-with-text-title {
    font-family: "Kumbh Sans", sans-serif;
    font-style: normal !important;
    font-weight: 300 !important;
    margin: 0;
    line-height: 1.1;
    font-weight: 400;
    font-style: italic;
  }
  .image-with-text-title span{
    font-family: "Kumbh Sans", sans-serif;
    font-weight: 400;
    font-style: italic;
  }
  .image-with-text-description {
    font-family: "Kumbh Sans", sans-serif;
    font-weight: 400;
    margin: 0;
    line-height: 1.6;
  }
  .image-with-text-button {
    border: 1px solid !important;
    font-family: "Kumbh Sans", sans-serif;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    border-radius: 0;
    padding: 16px 32px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    text-align: center;
    width: fit-content;
    border: none;
    margin-top: 30px;
    padding: 0;
    width: 129px;
    height: 37px;
    border-radius: 4px;
  }
  .image-with-text-button:hover{
    background: none !important;
    color: #373A36 !important;
    border-color:#C5C1C0 !important;
  }
  @media screen and (min-width: 768px) {
    .image-with-text-wrapper {
      padding: var(--image-with-text-padding-top-desktop) var(--image-with-text-padding-right-desktop) var(--image-with-text-padding-bottom-desktop) var(--image-with-text-padding-left-desktop);
    }
    .image-with-text-button {
      margin-top: 40px;
    }
    .image-with-text-content {
      gap: 20px;
    }

    .image-with-text-text {
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;
      border-radius: 10px;
      min-width: 350px;
      min-height: 320px;
    }
  }

  @media screen and (max-width: 767px) {
    .image-with-text-description{
      padding-top: 20px;
    }
    .image-with-text-content {
      grid-template-columns: 1fr;
      gap: 20px;
      display: flex;
      flex-direction: column;
    }

    .image-with-text-reverse .image-with-text-media,
    .image-with-text-reverse .image-with-text-text {
      order: unset;
    }

    .image-with-text-text {
      text-align: {% if section.settings.mobile_text_alignment == 'center' %}center{% elsif section.settings.mobile_text_alignment == 'right' %}right{% else %}left{% endif %};
      max-width: 522px;
      min-height: 300px;
      padding: 0 20px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .image-with-text-media {
      {% if section.settings.mobile_image_first %}order: -1;{% else %}order: 1;{% endif %}
    }

    .image-with-text-text {
      {% if section.settings.mobile_image_first %}order: 1;{% else %}order: -1;{% endif %}
    }
  }
</style>

<style>
  #{{ section.id }} .image-with-text-subheading {
    font-size: {{ section.settings.subheading_size_mobile | default: 12 }}px;
    color: {{ section.settings.subheading_color | default: '#666666' }};
  }

  #{{ section.id }} .image-with-text-title {
    font-size: {{ section.settings.title_size_mobile | default: 36 }}px;
    color: {{ section.settings.title_color | default: '#000000' }};
  }

  #{{ section.id }} .image-with-text-description {
    font-size: {{ section.settings.description_size_mobile | default: 16 }}px;
    color: {{ section.settings.description_color | default: '#666666' }};
  }

  #{{ section.id }} .image-with-text-button {
    background-color: {{ section.settings.button_bg_color | default: '#000000' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
    border: 2px solid {{ section.settings.button_border_color | default: '#000000' }};
  }
  @media screen and (min-width: 990px) {
    #{{ section.id }} .image-with-text-title {
      font-size: {{ section.settings.title_size_desktop | default: 48 }}px;
    }

  }
  @media screen and (min-width: 768px) {
    #{{ section.id }} .image-with-text-subheading {
      font-size: {{ section.settings.subheading_size_desktop | default: 14 }}px;
    }

    #{{ section.id }} .image-with-text-description {
      font-size: {{ section.settings.description_size_desktop | default: 18 }}px;
    }
  }
  
  @media (min-width: 1076px){
    .image-with-text-text{
      padding: 0 57px;
    }
  }
</style>

