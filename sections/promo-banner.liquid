<section id="{{ section.id }}" class="promo-banner-wrapper section-{{ section.id }}">
  <div class="promo-banner-container">
    {% if section.settings.announcement_text != blank %}
      <div class="promo-banner-content">
        <span class="promo-banner-text">{{ section.settings.announcement_text }}</span>
        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <a href="{{ section.settings.button_url }}" class="promo-banner-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
    {% if section.settings.show_close_button %}
      <button class="promo-banner-close" aria-label="Close announcement">
        <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
          <path d="M11 1L1 11M1 1L11 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {% endif %}
  </div>
</section>

<style>
  .promo-banner-wrapper {
    --promo-bg-color: {{ section.settings.background_color | default: '#007acc' }};
    --promo-text-color: {{ section.settings.text_color | default: '#ffffff' }};
    --promo-button-bg: {{ section.settings.button_background_color | default: 'transparent' }};
    --promo-button-text: {{ section.settings.button_text_color | default: '#ffffff' }};
    --promo-button-border: {{ section.settings.button_border_color | default: '#ffffff' }};
    --promo-text-size-desktop: {{ section.settings.text_size_desktop | default: 14 }}px;
    --promo-text-size-mobile: {{ section.settings.text_size_mobile | default: 12 }}px;
    --promo-button-size-desktop: {{ section.settings.button_text_size_desktop | default: 14 }}px;
    --promo-button-size-mobile: {{ section.settings.button_text_size_mobile | default: 12 }}px;
    --promo-padding-top-desktop: {{ section.settings.padding_top_desktop | default: 12 }}px;
    --promo-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop | default: 12 }}px;
    --promo-padding-top-mobile: {{ section.settings.padding_top_mobile | default: 10 }}px;
    --promo-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile | default: 10 }}px;
    --promo-padding-left-desktop: {{ section.settings.padding_left_desktop | default: 20 }}px;
    --promo-padding-right-desktop: {{ section.settings.padding_right_desktop | default: 20 }}px;
    --promo-padding-left-mobile: {{ section.settings.padding_left_mobile | default: 15 }}px;
    --promo-padding-right-mobile: {{ section.settings.padding_right_mobile | default: 15 }}px;
    --promo-max-width: {{ section.settings.max_width | default: '100%' }};
  }

  #{{ section.id }} .promo-banner-text p{
    font-family: "Kumbh Sans", sans-serif;
    font-weight: 500;
    font-size: 12px;
  }
  #{{ section.id }}.promo-banner-wrapper {
    background-color: var(--promo-bg-color);
    color: var(--promo-text-color);
    width: 100%;
    max-width: var(--promo-max-width);
    margin: 0 auto;
    font-family: inherit;
    line-height: 1.4;
    position: relative;
    overflow: hidden;
  }
  #{{ section.id }} .promo-banner-container .promo-banner-close{
    right: 80px;
    top: 20px;
  }
  #{{ section.id }} .promo-banner-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--promo-padding-top-desktop) var(--promo-padding-right-desktop) var(--promo-padding-bottom-desktop) var(--promo-padding-left-desktop);
    position: relative;
    min-height: 40px;
  }

  #{{ section.id }} .promo-banner-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
    text-align: center;
    flex: 1;
  }

  #{{ section.id }} .promo-banner-text {
    font-size: var(--promo-text-size-desktop);
    font-weight: 500;
    margin: 0;
    color: var(--promo-text-color);
  }

  #{{ section.id }} .promo-banner-button {
    font-size: var(--promo-button-size-desktop);
    font-weight: bold;
    color: var(--promo-button-text);
    background-color: transparent;
    border: none;
    padding: 0;
    text-decoration: underline;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    white-space: nowrap;
    font-family: "Kumbh Sans", sans-serif;
    font-weight: 700;
    text-decoration: none;
    margin-right: 29px;
    position: relative;
  }

  #{{ section.id }} .promo-banner-button:after {
      content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  height: 1px;
  width: 100%;
  background-color: #333;
  }
  #{{ section.id }} .promo-banner-button:hover {
    opacity: 0.8;
    transform: translateY(-1px);
  }

  #{{ section.id }} .promo-banner-close {
    position: absolute;
    right: var(--promo-padding-right-desktop);
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--promo-text-color);
    cursor: pointer;
    padding: 4px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  #{{ section.id }} .promo-banner-close:hover {
    opacity: 1;
  }

  #{{ section.id }} .promo-banner-close svg {
    width: 12px;
    height: 12px;
  }

  @media screen and (max-width: 768px) {
    #{{ section.id }} .promo-banner-container {
      padding: var(--promo-padding-top-mobile) var(--promo-padding-right-mobile) var(--promo-padding-bottom-mobile) var(--promo-padding-left-mobile);
    }

    #{{ section.id }} .promo-banner-content {
      gap: 10px;
    }

    #{{ section.id }} .promo-banner-text {
      font-size: var(--promo-text-size-mobile);
    }

    #{{ section.id }} .promo-banner-button {
      font-size: var(--promo-button-size-mobile);
      margin-right: 0;
      padding: 0;
    }

    #{{ section.id }} .promo-banner-close {
      right: var(--promo-padding-right-mobile);
    }
    .promo-banner-close{
      display: none !important;
    }
  }

  @media screen and (max-width: 480px) {
    #{{ section.id }} .promo-banner-content {
      gap: 10px;
    }

    #{{ section.id }} .promo-banner-text {
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const promoBanner = document.getElementById('{{ section.id }}');
    const closeButton = promoBanner?.querySelector('.promo-banner-close');
    
    if (closeButton && promoBanner) {
      closeButton.addEventListener('click', function() {
        promoBanner.style.transition = 'all 0.3s ease';
        promoBanner.style.height = promoBanner.offsetHeight + 'px';
        promoBanner.style.overflow = 'hidden';
        
        setTimeout(() => {
          promoBanner.style.height = '0px';
          promoBanner.style.paddingTop = '0px';
          promoBanner.style.paddingBottom = '0px';
          promoBanner.style.marginTop = '0px';
          promoBanner.style.marginBottom = '0px';
        }, 10);
        
        setTimeout(() => {
          promoBanner.style.display = 'none';
        }, 300);
        
        sessionStorage.setItem('promo-banner-{{ section.id }}-closed', 'true');
      });
    }
    
    if (sessionStorage.getItem('promo-banner-{{ section.id }}-closed') === 'true') {
      if (promoBanner) {
        promoBanner.style.display = 'none';
      }
    }
  });
</script>

