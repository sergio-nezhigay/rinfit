<div id="{{ section.id }}" class="shop-by-category-section {{ section.settings.custom_classes }}">
  <div class="shop-by-category-wrapper">
    <div class="shop-by-category-container">
      {% if section.settings.title != blank %}
        <div class="shop-by-category-header">
          <h2 class="shop-by-category-title">{{ section.settings.title }}</h2>
          {% if section.settings.subtitle != blank %}
            <p class="shop-by-category-subtitle">{{ section.settings.subtitle }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="shop-by-category-grid">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'category' %}
                <div class="shop-by-category-item" {{ block.shopify_attributes }}>
                  <a href="{{ block.settings.category_url | default: '#' }}" class="shop-by-category-link">
                    {% if block.settings.category_image != blank %}
                      <div class="shop-by-category-image-wrapper">
                        {% assign image_alt = block.settings.category_image.alt
                          | default: block.settings.category_title
                        %}
                        <img
                          src="{{ block.settings.category_image | image_url: width: 400, height: 400 }}"
                          alt="{{ image_alt }}"
                          class="shop-by-category-image"
                          width="400"
                          height="400"
                          loading="lazy"
                        >
                        <div class="shop-by-category-overlay"></div>
                      </div>
                    {% endif %}

                    <div class="shop-by-category-content">
                      {% if block.settings.category_icon != blank %}
                        <div class="shop-by-category-icon">
                          {{ block.settings.category_icon }}
                        </div>
                      {% endif %}

                      {% if block.settings.category_title != blank %}
                        <h3 class="shop-by-category-item-title">{{ block.settings.category_title }}</h3>
                      {% endif %}

                      {% if block.settings.category_description != blank %}
                        <div class="shop-by-category-item-description">
                          {{ block.settings.category_description }}
                        </div>
                      {% endif %}

                      {% if block.settings.show_button %}
                        <span class="shop-by-category-button">
                          {{ block.settings.button_text | default: 'Shop Now' }}
                          <svg class="shop-by-category-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                            <path d="M1 8H15M15 8L8 1M15 8L8 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </span>
                      {% endif %}
                    </div>
                  </a>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  :root {
    --shop-category-max-width: {{ section.settings.max_width }}px;
    --shop-category-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --shop-category-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --shop-category-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --shop-category-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --shop-category-grid-gap: {{ section.settings.grid_gap }}px;
    --shop-category-columns-mobile: {{ section.settings.columns_mobile }};
    --shop-category-columns-desktop: {{ section.settings.columns_desktop }};
    --shop-category-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --shop-category-title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --shop-category-subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
    --shop-category-subtitle-size-desktop: {{ section.settings.subtitle_size_desktop }}px;
    --shop-category-item-title-size-mobile: {{ section.settings.item_title_size_mobile }}px;
    --shop-category-item-title-size-desktop: {{ section.settings.item_title_size_desktop }}px;
    --shop-category-border-radius: {{ section.settings.border_radius }}px;
    --shop-category-hover-scale: {{ section.settings.hover_scale | divided_by: 100.0 }};
  }

  #{{ section.id }} {
    background: {{ section.settings.section_background }};
    padding-top: var(--shop-category-padding-top-mobile);
    padding-bottom: var(--shop-category-padding-bottom-mobile);
  }

  #{{ section.id }} .shop-by-category-wrapper {
    width: 100%;
    max-width: var(--shop-category-max-width);
    margin: 0 auto;
    padding: 0 16px;
  }

  #{{ section.id }} .shop-by-category-container {
    width: 100%;
  }

  #{{ section.id }} .shop-by-category-header {
    text-align: {{ section.settings.text_alignment }};
    margin-bottom: 48px;
  }

  #{{ section.id }} .shop-by-category-title {
    font-size: var(--shop-category-title-size-mobile);
    font-weight: 700;
    line-height: 1.2;
    color: {{ section.settings.title_color }};
    margin: 0 0 16px 0;
    letter-spacing: -0.02em;
  }

  #{{ section.id }} .shop-by-category-subtitle {
    font-size: var(--shop-category-subtitle-size-mobile);
    line-height: 1.6;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
  }

  #{{ section.id }} .shop-by-category-grid {
    display: grid;
    grid-template-columns: repeat(var(--shop-category-columns-mobile), 1fr);
    gap: var(--shop-category-grid-gap);
    align-items: stretch;
  }

  #{{ section.id }} .shop-by-category-item {
    position: relative;
    border-radius: var(--shop-category-border-radius);
    overflow: hidden;
    background: {{ section.settings.item_background }};
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  #{{ section.id }} .shop-by-category-item:hover {
    transform: scale(var(--shop-category-hover-scale));
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  #{{ section.id }} .shop-by-category-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  #{{ section.id }} .shop-by-category-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  #{{ section.id }} .shop-by-category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  #{{ section.id }} .shop-by-category-item:hover .shop-by-category-image {
    transform: scale(1.1);
  }

  #{{ section.id }} .shop-by-category-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.3) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  #{{ section.id }} .shop-by-category-item:hover .shop-by-category-overlay {
    opacity: 1;
  }

  #{{ section.id }} .shop-by-category-content {
    padding: 24px;
    text-align: {{ section.settings.item_text_alignment }};
    position: relative;
  }

  #{{ section.id }} .shop-by-category-icon {
    margin-bottom: 12px;
  }

  #{{ section.id }} .shop-by-category-icon svg {
    width: 32px;
    height: 32px;
    color: {{ section.settings.icon_color }};
  }

  #{{ section.id }} .shop-by-category-item-title {
    font-size: var(--shop-category-item-title-size-mobile);
    font-weight: 600;
    line-height: 1.3;
    color: {{ section.settings.item_title_color }};
    margin: 0 0 12px 0;
    letter-spacing: -0.01em;
  }

  #{{ section.id }} .shop-by-category-item-description {
    font-size: 14px;
    line-height: 1.5;
    color: {{ section.settings.item_description_color }};
    margin-bottom: 20px;
    opacity: 0.7;
  }

  #{{ section.id }} .shop-by-category-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 500;
    color: {{ section.settings.button_color }};
    transition: all 0.3s ease;
  }

  #{{ section.id }} .shop-by-category-arrow {
    transition: transform 0.3s ease;
  }

  #{{ section.id }} .shop-by-category-item:hover .shop-by-category-arrow {
    transform: translateX(4px);
  }

  @media (min-width: 768px) {
    #{{ section.id }} {
      padding-top: var(--shop-category-padding-top-desktop);
      padding-bottom: var(--shop-category-padding-bottom-desktop);
    }

    #{{ section.id }} .shop-by-category-wrapper {
      padding: 0 24px;
    }

    #{{ section.id }} .shop-by-category-title {
      font-size: var(--shop-category-title-size-desktop);
    }

    #{{ section.id }} .shop-by-category-subtitle {
      font-size: var(--shop-category-subtitle-size-desktop);
    }

    #{{ section.id }} .shop-by-category-item-title {
      font-size: var(--shop-category-item-title-size-desktop);
    }

    #{{ section.id }} .shop-by-category-grid {
      grid-template-columns: repeat(var(--shop-category-columns-desktop), 1fr);
    }
  }
</style>

{% schema %}
