<style>
  .swiper-wrapper-category > .swiper-slide {
    width: 173.8px;
  }
  .swiper-wrapper-category > .swiper-slide img {
    width: 173.8px;
    height: 172.1px;
    border-radius: 10px;
    object-fit: cover;
  }
  .main-swiper-category {
    position: relative;
    width: fit-content;
    margin: 0 auto;
  }
  .main-swiper-category {
    width: 100%;
    padding-left: 20px;
  }
  .main-title-category {
    font-family: 'Kumbh Sans', sans-serif;
    font-weight: 500;
    font-size: 14px;
    text-align: center;
  }
  .mySwiper-category.swiper {
    max-width: 1330px;
  }
  .swiper-button-next {
    right: -30px;
  }
  .swiper-button-next:after,
  .swiper-button-prev:after {
    display: none;
  }
  .swiper-button-prev img {
    transform: rotate(180deg);
  }
  .swiper-button-next,
  .swiper-button-next {
    display: none;
  }
  .swiper-button-prev img,
  .swiper-button-next img {
    border: 1px solid #37393633;
    border-radius: 50%;
    padding: 7px 9.5px;
  }
  .swiper-button-prev {
    left: -37px;
  }
  .main-swiper-category .swiper-pagination {
    position: relative;
    margin-top: 30px;
  }
  .main-swiper-category .swiper-pagination-bullet {
    width: 32px;
    height: 6px;
    border-radius: 10px;
    background: #dcdcdc;
    opacity: 1;
    margin: 0 4px;
    transition: background 0.3s;
  }

  .main-swiper-category .swiper-pagination-bullet-active {
    background: #6b6b6b;
  }
  .main-block-categories {
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    padding: 20px 0 20px 30px;
    align-items: center;
  }
  .button-all-category {
    display: none;
  }
  .main-block-categories p {
    line-height: normal;
    font-family: 'Kumbh Sans', sans-serif;
    font-weight: 300;
    font-size: 40px;
  }
  .main-block-categories p em {
    font-weight: 700;
  }
  @media (min-width: 768px) {
    .main-block-categories {
      padding: 17.5px 0 43.5px;
    }
    .button-all-category {
      font-family: 'Kumbh Sans', sans-serif;
      font-weight: 600;
      font-size: 14px;
      display: block;
      color: white;
      background: #232222;
      min-width: 129px;
      min-height: 37px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-transform: uppercase;
      border-radius: 4px;
      border: 1px solid;
      transition: all 0.3s ease;
    }
    .button-all-category:hover {
      background: none !important;
      color: #373a36 !important;
      border-color: #c5c1c0 !important;
    }
    .swiper-button-next,
    .swiper-button-next {
      display: block;
    }
    .main-swiper-category {
      padding: 0;
      width: fit-content;
    }
    .swiper-pagination {
      display: none !important;
    }
    .main-block-categories {
      padding-left: 0px;
    }
    .main-block-categories,
    .mySwiper-category.swiper {
      max-width: 660px;
    }
  }
  @media (min-width: 1024px) {
    .main-block-categories,
    .mySwiper-category.swiper {
      max-width: 900px;
    }
  }
  @media (min-width: 1440px) {
    .main-block-categories,
    .mySwiper-category.swiper {
      max-width: 1330px;
    }
  }
</style>

<section>
  <div class="main-block-categories">
    {% if section.settings.title != blank %}
      {{ section.settings.title }}
    {% endif %}
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <a class="button-all-category" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
  <div class="main-swiper-category">
    <div class="swiper mySwiper-category">
      <div class="swiper-wrapper swiper-wrapper-category">
        {% comment %} Fixed demo categories data {% endcomment %}
        {% assign demo_categories = 'Electronics|https://picsum.photos/400/400?random=1|/collections/electronics,Fashion|https://picsum.photos/400/400?random=2|/collections/fashion,Home & Garden|https://picsum.photos/400/400?random=3|/collections/home-garden,Sports|https://picsum.photos/400/400?random=4|/collections/sports,Books|https://picsum.photos/400/400?random=5|/collections/books,Beauty|https://picsum.photos/400/400?random=6|/collections/beauty,Jewelry|https://picsum.photos/400/400?random=7|/collections/jewelry,Toys|https://picsum.photos/400/400?random=8|/collections/toys'
          | split: ','
        %}

        {% for category_data in demo_categories %}
          {% assign category_info = category_data | split: '|' %}
          {% assign category_title = category_info[0] %}
          {% assign category_image = category_info[1] %}
          {% assign category_url = category_info[2] %}

          <div class="swiper-slide">
            <a href="{{ category_url }}">
              <img src="{{ category_image }}" alt="{{ category_title }}">
              <p class="main-title-category">{{ category_title }}</p>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-next"><img src="{{ 'Vector.svg' | asset_url }}" alt="Next"></div>
    <div class="swiper-button-prev"><img src="{{ 'Vector.svg' | asset_url }}" alt="Prev"></div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    import('https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.7/swiper-bundle.min.js').then(() => {
      new Swiper('.mySwiper-category', {
        slidesPerView: 7,
        spaceBetween: 10,
        loop: false,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        breakpoints: {
          0: {
            slidesPerView: 'auto',
          },
          768: {
            slidesPerView: 4,
          },
          1024: {
            slidesPerView: 5,
          },
          1440: {
            slidesPerView: 7,
          },
        },
      });
    });
  });
</script>

{% schema %}
{
  "name": "Shop by Category",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p><em>Shop by</em> Category</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "VIEW ALL"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Shop by Category"
    }
  ]
}
{% endschema %}
