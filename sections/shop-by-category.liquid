<style>
  .swiper-wrapper-category > .swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .swiper-wrapper-category > .swiper-slide img {
    width: 100%;
    height: 360px;
    border-radius: 10px;
    object-fit: cover;
  }
  .main-swiper-category {
    width: 100%;
    margin: 0 auto;
    position: relative;
    max-width: 1330px;
    padding: 0 12px; /* Add horizontal padding for mobile */
  }
  .main-title-category {
    font-family: 'Kumbh Sans', sans-serif;
    font-weight: 500;
    font-size: 14px;
    text-align: center;
    margin: 0;
  }
  .swiper-button-next,
  .swiper-button-prev {
    display: none;
  }
  @media (min-width: 768px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: block;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 2;
    }
    .swiper-button-next {
      right: -30px;
    }
    .swiper-button-prev {
      left: -37px;
    }
    .swiper-pagination {
      display: none !important;
    }
    .main-swiper-category {
      padding: 0; /* Remove padding on desktop */
      width: fit-content;
    }
  }
  .swiper-pagination {
    display: block;
  }
  @media (min-width: 768px) {
    .swiper-pagination {
      display: none !important;
    }
  }
  .main-swiper-category .swiper-pagination {
    position: relative;
    margin-top: 30px;
    text-align: center;
  }
  .main-swiper-category .swiper-pagination-bullet {
    width: 32px;
    height: 6px;
    border-radius: 10px;
    background: #dcdcdc;
    opacity: 1;
    margin: 0 4px;
    transition: background 0.3s;
    display: inline-block;
  }
  .main-swiper-category .swiper-pagination-bullet-active {
    background: #6b6b6b;
  }
  .main-block-categories {
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    padding: 20px 0 20px 30px;
    align-items: center;
  }
  .button-all-category {
    display: none;
  }
  .main-block-categories p {
    line-height: normal;
    font-family: 'Kumbh Sans', sans-serif;
    font-weight: 300;
    font-size: 40px;
  }
  .main-block-categories p em {
    font-weight: 700;
  }
  @media (min-width: 768px) {
    .main-block-categories {
      padding: 17.5px 0 43.5px;
    }
    .button-all-category {
      font-family: 'Kumbh Sans', sans-serif;
      font-weight: 600;
      font-size: 14px;
      display: block;
      color: white;
      background: #232222;
      min-width: 129px;
      min-height: 37px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-transform: uppercase;
      border-radius: 4px;
      border: 1px solid;
      transition: all 0.3s ease;
    }
    .button-all-category:hover {
      background: none !important;
      color: #373a36 !important;
      border-color: #c5c1c0 !important;
    }
    .swiper-button-next,
    .swiper-button-next {
      display: block;
    }
    .main-swiper-category {
      padding: 0;
      width: fit-content;
    }
    .swiper-pagination {
      display: none !important;
    }
    .main-block-categories {
      padding-left: 0px;
    }
    .main-block-categories,
    .mySwiper-category.swiper {
      max-width: 660px;
    }
  }
  @media (min-width: 1024px) {
    .main-block-categories,
    .mySwiper-category.swiper {
      max-width: 900px;
    }
  }
  @media (min-width: 1440px) {
    .main-block-categories,
    .mySwiper-category.swiper {
      max-width: 1330px;
    }
  }
  .category-rectangle {
    width: 100%;
    height: 360px;
    border-radius: 10px;
    background: #e0e0e0;
    display: block;
  }
  .category-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }
  .category-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: transparent; /* Remove dark overlay */
    color: white;
    padding: 10px;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    opacity: 1; /* Always show overlay */
    transition: opacity 0.3s;
  }
</style>

<section>
  <div class="main-block-categories">
    {% if section.settings.title != blank %}
      <p class="main-title-category">{{ section.settings.title }}</p>
    {% endif %}
    {%- comment -%}
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a class="button-all-category" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
      {% endif %}
    {%- endcomment -%}
  </div>
  <div class="main-swiper-category">
    <div class="swiper mySwiper-category">
      <div class="swiper-wrapper swiper-wrapper-category">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <a href="{{ block.settings.link }}" class="category-link">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.title }}">
              {% else %}
                <div class="category-rectangle"></div>
              {% endif %}
              <div class="category-overlay">
                <p class="category-title">{{ block.settings.title }}</p>
                <span class="category-link-text">
                  {{ section.settings.category_link_text }}
                </span>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-next"><img src="{{ 'Vector.svg' | asset_url }}" alt="Next"></div>
    <div class="swiper-button-prev"><img src="{{ 'Vector.svg' | asset_url }}" alt="Prev"></div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    import('https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.7/swiper-bundle.min.js').then(() => {
      new Swiper('.mySwiper-category', {
        slidesPerView: 1.2,
        spaceBetween: 10,
        loop: false,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        breakpoints: {
          768: {
            slidesPerView: 2,
          },
          1024: {
            slidesPerView: 4,
          },
        },
      });
    });
  });
</script>

