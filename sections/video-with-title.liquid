<style>
    a.compagin-promotion {
        text-decoration: none;
    }
    .promotion-latest {
        background-color: {{ section.settings.section_bg_color }};
        text-align: center;
        display: flex;
    }
    .promotion-latest .text-content-block {
        text-align: center;
        order: 1;
        padding: 0;
    }
    span.content-title {
        display: block;
        line-height: 1em;
        letter-spacing: 1.5px;
        color:{{ section.settings.section_head_color}};
        text-transform: capitalize;
        margin-bottom: 8px;
    }
    span.content-promotion {
        display: block;
        line-height: 1.3em;
        text-transform: initial;
        letter-spacing: 0.5px;
        color: {{ section.settings.section_desc_color}};
    }
    span.cta-promotion {
        display: block;
        font-size: {{ section.settings.mobile_cta_font_size }}vw;
        font-weight: 400;
        line-height: 1.4em;
        text-transform: initial;
        text-decoration: underline;
        margin: 5vw 0;
        color: {{ section.settings.section_desc_color}};
        letter-spacing: 1px;
        text-underline-position: under;

    }
    .content-logo {
        padding: 0;        
    }
    img:hover {
            opacity: 0.8;
        }
    @media (max-width: 767px) {
            .promotion-latest {
                flex-direction: column;
            }
            .promotion-latest .text-content-block {
                order: 2;
                padding: 18px;
            }
            span.content-title {
            font-size: {{ section.settings.mobile_heading_font_size }}vw;
            }
            span.content-promotion {
            font-size: {{ section.settings.mobile_desc_font_size }}vw;
            padding: 8px;
            }
            span.cta-promotion {
            font-size: {{ section.settings.mobile_cta_font_size }}vw;
            margin: 1.5vw 0;
            }
    }
    @media(min-width: 768px) {            
        .promotion-latest {
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
        .promotion-latest .text-content-block {
            padding: 0;
            width: 50%;
        }
        .promotion-latest .campaign-image {
            width: 50%;
        }
        span.content-title {
            font-size: {{ section.settings.desktop_heading_font_size }}vw;
        }
        span.content-promotion {
            font-size: {{ section.settings.desktop_desc_font_size }}vw;
            margin: 8px 0;
            padding: 0 38px;
        }
        span.cta-promotion {
            font-size: {{ section.settings.desktop_cta_font_size }}vw;
            margin: 1.5vw 0;
        }
        .content-logo {
            padding: 0;
        }
    }
    @media (min-width: 1200px) {
                .section_layout {
                max-width: {% if section.settings.section_layout == 'full' %}100%;{% else %}1200px;margin: 0 auto;{% endif %}
                margin-top: {{ section.settings.section_margin_top }}px;
                margin-bottom: {{ section.settings.section_margin_bottom }}px;
                }
    }
.promotion-latest .campaign-image {
order: {% if section.settings.switch %} 2 {% else %} 1 {% endif %};
}
.campaign-image img {
max-width: 100%;
image-rendering: auto;
flex-shrink: 0;
min-width: 100%;
min-height: 100%;
}
</style>
{%- assign video_mp4_url = video_mp4_url | default: section.settings.video_url -%}
{%- assign video_controls = false -%}
{%- assign video_autoplay = true -%}
{%- assign prm_responsive_height = '' -%}
<div class="content-asset-container-sh block-margin-bottom">
<div class="promotion-latest">
<div class="campaign-image">
    <video muted playsinline preload="metadata" {% if video_controls %} controls{% endif %}{% if video_autoplay %} autoplay loop{% endif %} class="{% if prm_responsive_height %}rimage__video{% endif %} w-100">
        <source src="{{ video_mp4_url }}" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>
<div class="text-content-block">
<span class="content-title">{{ section.settings.title1 }}</span>
<span class="content-promotion">
{{ section.settings.description1 }}
</span>
<span class="content-title" style="padding-top: 18px;">{{ section.settings.title2 }}</span>
<span class="content-promotion">
{{ section.settings.description2 }}
</span>
</div>
</div>
</div>
