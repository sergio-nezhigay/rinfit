        "label": "Only MP4 video url"
    },
    {
        "type": "header",
        "content": "Colour"
    },
    {
        "type": "color",
        "id": "section_bg_color",
        "label": "Section Background Colour",
        "default": "#EDEDED"
    },
    {
        "type": "color",
        "id": "section_head_color",
        "label": "Section Text Colour",
        "default": "#c41230"
    },
    {
        "type": "color",
        "id": "section_desc_color",
