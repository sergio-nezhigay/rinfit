{%- assign section_id = section.id -%}

<div id="{{ section_id }}" class="warranty-features-section {{ section.settings.custom_classes }}">
  <div class="warranty-features-container">
    {%- if section.blocks.size > 0 -%}
      <div class="warranty-features-grid">
        {%- for block in section.blocks -%}
          <div class="warranty-feature-item" {{ block.shopify_attributes }}>
            {%- if block.settings.icon != blank -%}
              <div class="warranty-feature-icon">
                {{ block.settings.icon }}
              </div>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <h3 class="warranty-feature-title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <div class="warranty-feature-description">{{ block.settings.description }}</div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  :root {
    --warranty-section-bg: {{ section.settings.background_color }};
    --warranty-max-width: {{ section.settings.max_width }}px;
    --warranty-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --warranty-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --warranty-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --warranty-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --warranty-title-color: {{ section.settings.title_color }};
    --warranty-description-color: {{ section.settings.description_color }};
    --warranty-icon-color: {{ section.settings.icon_color }};
    --warranty-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --warranty-title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --warranty-description-size-desktop: {{ section.settings.description_size_desktop }}px;
  }

  #{{ section_id }} {
    background-color: var(--warranty-section-bg);
    padding-top: var(--warranty-padding-top-mobile);
    padding-bottom: var(--warranty-padding-bottom-mobile);
    font-family: "Kumbh Sans", sans-serif;
  }

  #{{ section_id }} .warranty-features-container {
    max-width: var(--warranty-max-width);
    margin: 0 auto;
    padding: 0 20px;
  }

  #{{ section_id }} .warranty-features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    align-items: start;
  }

  #{{ section_id }} .warranty-feature-item {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  #{{ section_id }} .warranty-feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--warranty-icon-color);
    width: 32px;
    height: 32px;
    flex-shrink: 0;
  }

  #{{ section_id }} .warranty-feature-icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  #{{ section_id }} .warranty-feature-title {
    margin: 0;
    font-size: var(--warranty-title-size-mobile);
    font-weight: 700;
    color: var(--warranty-title-color);
    text-transform: uppercase;
    line-height: 2.5;
  }

  #{{ section_id }} .warranty-feature-description {
    margin: 0;
    /* font-size: var(--warranty-description-size-mobile); */ /* Removed for mobile */
    color: var(--warranty-description-color);
    line-height: 1.5;
    text-align: center;
  }

  @media (min-width: 768px) {
    #{{ section_id }} {
      padding-top: var(--warranty-padding-top-desktop);
      padding-bottom: var(--warranty-padding-bottom-desktop);
    }

    #{{ section_id }} .warranty-features-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }

    #{{ section_id }} .warranty-feature-item {
      gap: 20px;
    }

    #{{ section_id }} .warranty-feature-icon {
      width: 32px;
      height: 32px;
    }

    #{{ section_id }} .warranty-feature-title {
      font-size: var(--warranty-title-size-desktop);
    }

    #{{ section_id }} .warranty-feature-description {
      font-size: var(--warranty-description-size-desktop);
    }
  }

  @media (min-width: 1200px) {
    #{{ section_id }} .warranty-features-container {
      padding: 0 40px;
    }
  }

  @media (max-width: 767px) {
    #{{ section_id }} {
      background-color: white !important;
    }
    #{{ section_id }} .warranty-feature-description {
      display: none;
      /* font-size removed for mobile */
    }
  }
</style>

