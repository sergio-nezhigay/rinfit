                                {{ select_dropdown_html }}
                                <span{% if active_value %} class="selected"{% endif %} data-value="{% render 'product-get-options-strip-symbols' with value: value %}"{% if disabled_value %} disabled="disabled"{% endif %} {{ trigger_attr }}>{{ value }}</span>
                                {% endcapture %}
                            {%- endfor -%}
                        </select>
                        <i class="position-absolute right-0 mr-10">{% render 'icon-theme-229' %}</i>
                    </div>
                    <div class="select__dropdown dropdown d-none position-lg-absolute {% if select_dropdown_position == 'top' %}bottom{% else %}top{% endif %}-lg-100 left-lg-0" data-js-dropdown data-js-select-dropdown{% if disable_auto_select %} data-dropdown-unselected{% endif %}>
                        <div class="px-15 pb-30 py-lg-15">
                            {{ select_dropdown_html }}
                        </div>
                    </div>
                </div>
            {%- else -%}
                <div class="product-options__section flex-wrap d-none popup-size-calc upsell-size-selection-overlay" data-style="text" data-property="{% render 'product-get-options-strip-symbols' with value: option.name %}"{% if disable_auto_select %} data-disable-auto-select{% endif %} {% if option_name_down contains "size" %} id="upsell-popup-size-{% if option_name_down contains "women" %}women-{% endif %}{{ current_variant_id }}" {% endif %}>
                    <div class="{%if option_name_down contains "women" %}upsell-close-overlay-women{% else %}upsell-close-overlay{% endif %}" tabindex="0" data-id="{{ current_variant_id }}"></div>                       
                    <div class="color-container">
                    <div class="size-label">{{ 'products.product.selected_color' | t }}</div>
                    <div id="upsell-color-image-{%if option_name_down contains "women" %}women-{% endif %}clone--{{ current_variant_id }}"></div>
                    </div>
                    <div class="guide-container">
                        <span class="size-label" id="selected_size_{%if option_name_down contains "women's size" %}women_{% elsif option_name_down contains "men's size" %}men_{% endif %}{{ current_variant_id}}">{{ 'products.product.select_size' | t }}</span>
                        <div class="guide-link guide-label js-popup-button" data-js-popup-button="size-guide">{{ 'products.product.size_guide' | t }}</div>
                    </div>
                    {%if option_name_down contains "men" %}
                    <div class="product-with-men-women-size">
                    <label class="option-men-size {% if option_name_down contains "select men's size" %}active{% endif %}" data-id="{{ current_variant_id }}"
                    {%- if settings.tooltips_enable and product_option_enable_tooltips %}
                    data-js-tooltip
                    data-tippy-content="Click for men's size"
                    data-tippy-placement="top"
                    data-tippy-distance="6"
                    {%- endif -%}
                    >Men</label>
                    <label class="option-women-size {% if option_name_down contains "select women's size" %}active{% endif %}" data-id="{{ current_variant_id }}"
                    {%- if settings.tooltips_enable and product_option_enable_tooltips %}
                    data-js-tooltip
                    data-tippy-content="Click for women's size"
                    data-tippy-placement="top"
                    data-tippy-distance="6"
                    {%- endif -%}
                    >Women</label>
                    </div>
                    {% endif %}
                    {%- for value in option.values -%}
                        {% include 'product-get-options-res-status' with option_index0: option_index0 %}
                        {% if forloop.first and option_name_down contains "color" %}
                        {% assign default_color = value %}
                        {% endif %}
                        <div data-id="{{ current_variant_id }}" class="product-options__value product-options__value--text{% if option_name_down contains "women" %}--women{% endif %} {% if option_name_down contains "color" %}product-options__value--circle--{{ current_variant_id }}{% endif %} {% if option_name_down contains "women" and option_name_down contains "size" %} ring-size-women-active-{{ current_variant_id }}{% elsif option_name_down contains "size" %}ring-size-active-{{ current_variant_id }}{% endif %} d-flex flex-center border cursor-pointer{% if disabled_value %} disabled{% endif %}{% if active_value %} active{% endif %} lazyload"
                             data-js-option-value
                             data-value="{% render 'product-get-options-strip-symbols' with value: value %}"
                                {{ trigger_attr }}
                             data-bg="none"
                             data-scale="2"
                        >{{ value | remove: "Size " }}</div>
                    {%- endfor -%}
                    {% if option_name_down contains "size" %}
                    <div class="product-option-color-selected d-none product-options__value--circle--{{ current_variant_id }}" data-id="{{ current_variant_id }}" style="background-image: url(&quot;{{ product.featured_image | img_url: '48x' }}&quot;);"></div>
                    {% endif %}
                        <div id="upsell-buyringsize-{%if option_name_down contains "women" %}women-{% endif %}{{ current_variant_id }}" class="btn btn-upsell btn--full btn--status"
                        {%- if settings.tooltips_enable and product_option_enable_tooltips %}
                        data-js-tooltip
                        data-tippy-content="To buy, select ring size."
                        data-tippy-placement="top"
                        data-tippy-distance="6"
                        {%- endif -%}
                        >
                        <span class="d-flex flex-center"><span class="btn__text">{% if option_name_down contains "men" %}{{ 'products.product.add_to_cart.select_sizes' | t }}{% else %}{{ 'products.product.add_to_cart.select_size' | t }}{% endif %}</span></span>
                        </div>       
                        <button id="upsell-finaladdtocart-{%if option_name_down contains "women" %}women-{% endif %}{{ current_variant_id }}" type="submit" class="btn btn-upsell btn--full btn--secondary btn--status js-product-button-add-to-cart d-none" name="add" data-js-trigger-id="add-to-cart" data-js-button-add-to-cart-clone-id="footbar" data-js-product-button-add-to-cart style>
                        <span class="d-flex flex-center"><span class="btn__text">{{ 'products.product.add_to_cart.select_options' | t }}</span></span>
                        <span class="d-flex flex-center" data-button-content="added">{{ 'products.product.add_to_cart.added' | t }}</span>
                        <span class="d-flex flex-center" data-button-content="sold-out">{{ 'products.product.add_to_cart.sold_out' | t }}</span>
                        </button>       
                </div>
            {%- endif -%}
        </div>
    {%- endfor -%}
</div>
{%- endunless -%}
{%- assign change_history = false -%}
{%- assign trigger = null -%}
{%- assign trigger_id = null -%}